<div class="container">
  <% if current_user %>
    <div class="index-button">
      <a href="/surveys/new">Create New Survey</a>
    </div>

    <div class="index-button">
      <a href="/users/<%= current_user.id %>">User Profile</a>
    </div>

    <div class="index-button">
      <a href="/surveys/all">List all Surveys</a>
    </div>
  <% else %>
    <div class="index-button">
      <img src="https://a1-images.myspacecdn.com/images03/33/8623cf504e344db6a07609edb31ac431/300x300.jpg">
    </div>
  <% end %>

  <section id="most-recent-posts">

    <h2>Five Most Recent Surveys</h2>
    <ol>
    <% @five_most_recent_surveys.each do |survey| %>
      <li><h3><a href="/surveys/<%= survey.id %>"><%= survey.title %></a></h3>
          <p><%= survey.description %></p></li>
    <% end %>
    </ol>
  </section>
</div>



