<!DOCTYPE html>
<html lang="en">
<head>
  <!--
    normalize.css removes cross-browser differences in defaults, e.g.,
    differences in how form elements appear between Firefox and IE
    See: http://necolas.github.com/normalize.css/
  -->
  <link rel="stylesheet" href="/css/normalize.css">
  <!--
    application.css is where you put your styles
  -->
  <link rel="stylesheet" href="/css/application.css">

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="/js/application.js"></script>
  <script src="/js/survey_form.js"></script>

  <title></title>
</head>
<body>
  <div id="nav">
    <div id="brand">
      <a href="/">Survey Guerilla</a>
    </div>
    <% if @error %>
    <h1><%= @error %></h1>
    <% end %>
    <ul id="userlogin">
      <% if current_user %>
        <li id="logout"><a href="/users/logout">Log Out</a></li>
      <% else %>
        <li id="signin"><a href="/users/signin">Sign In</a></li>
        <li id="signup"><a href="/users/new">Sign Up</a></li>
      <% end %>
    </ul>
  </div>
  <div class="signup-box">
    <h1>Sign Up</h1>
    <form id="signup" method="post" action="/users/signup">
      <input type="name" name="name" placeholder="Name" value="<%= @email %>"><br>
      <input type="email" name="email" placeholder="Email" value="<%= @email %>"><br>
      <input type="password" name="password" placeholder="Password"><br>
      <input type="password" name="password_confirmation" placeholder="Verify Password">
      <div class="submit">
        <input type="submit" value="Sign Up">
      </div>
    </form>
  </div>

  <div class="signin-box">
    <h1>Sign In</h1>
    <form id="signin" method="post" action="/users/signin">
      <input type="email" name="email" placeholder="Email" value="<%= @email %>"><br>
      <input type="password" name="password" placeholder="Password">
      <div class="submit">
        <input type="submit" value="Sign In">
      </div>
    </form>
  </div>
  <%= yield %>
</body>
</html>
